<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:padding="16dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/perf_image"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/perf_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/perf_image"
        android:paddingTop="5dp"
        android:text="Title"
        android:textSize="15sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ImageButton
        android:id="@+id/perf_descBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite"
        android:src="@drawable/desc_selector"
        android:clickable="false"/>

    <ImageButton
        android:id="@+id/perf_chatBtn"
        android:background="@color/colorWhite"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/chat_selector"
        android:clickable="false"/>

    <ImageButton
        android:id="@+id/perf_attachBtn"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@color/colorWhite"
        android:src="@drawable/attach_selector"
        android:clickable="false"/>

</LinearLayout>